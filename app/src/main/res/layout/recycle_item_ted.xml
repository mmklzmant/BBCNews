<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_ted"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_ted_height"
    android:clickable="true"
    app:cardCornerRadius="@dimen/cardview_radius"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_cardview_ted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_large"
            android:text="S Korean president 'willing to resign'"
            android:textSize="@dimen/title_textsize" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/cardview_icon_size"
                android:layout_height="@dimen/cardview_icon_size"
                android:src="@mipmap/speaker_icon"/>
            <TextView
                android:id="@+id/tv_speaker_cardview_ted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/speaker_cardview_textsize"
                android:text="James Beacham"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_descrip_cardview_ted"
                android:textSize="@dimen/speaker_descip_textsize"
                android:text="(Experimental particle physicist)"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cardview_ted"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/margin_top_large"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:src="@mipmap/test" />

    </LinearLayout>
</android.support.v7.widget.CardView>
