<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_gravity="center_horizontal"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_cardview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:src="@mipmap/test"/>
        <TextView
            android:id="@+id/tv_title_cardview_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="S Korean president 'willing to resign"
            android:textSize="@dimen/title_textsize"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/cardview_icon_size"
                android:layout_height="@dimen/cardview_icon_size"
                android:src="@mipmap/time_icon"/>
            <TextView
                android:id="@+id/tv_time_cardview_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/time_cardview_textsize"
                android:text="6 hours ago"/>
            <ImageView
                android:layout_width="@dimen/cardview_icon_size"
                android:layout_height="@dimen/cardview_icon_size"
                android:layout_marginLeft="@dimen/cardview_item_left_margin"
                android:src="@mipmap/position_icon"/>
            <TextView
                android:id="@+id/tv_location_cardview_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/time_cardview_textsize"
                android:text="Europe"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>