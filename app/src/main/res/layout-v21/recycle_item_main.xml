<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_cardview_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_weight="3"
            android:src="@mipmap/test" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_cardview_main"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="S Korean president 'willing to resign"
                android:textSize="@dimen/title_textsize"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_cardview_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 hours ago"
                    android:textSize="@dimen/time_cardview_textsize" />

                <ImageView
                    android:layout_width="@dimen/cardview_icon_size"
                    android:layout_height="@dimen/cardview_icon_size"
                    android:layout_marginLeft="@dimen/cardview_item_left_margin"
                    android:src="@mipmap/position_icon" />

                <TextView
                    android:id="@+id/tv_location_cardview_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Europe"
                    android:textSize="@dimen/time_cardview_textsize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>